        <Button
            android:id="@+id/recipes_for_pregnant_woman"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_box"
            android:drawableLeft="@drawable/pregnant_woman"
            android:text="@string/recipe_pregnant_woman"
            android:textColor="@color/Orange"
            android:textSize="20sp"
            android:textAlignment="center"
            android:theme="@style/Button.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/recipes_for_mothers"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_box"
            android:drawableLeft="@drawable/mum_with_baby"
            android:text="@string/recipe_for_mothers"
            android:textColor="@color/Orange"
            android:textSize="20sp"
            android:textAlignment="center"
            android:theme="@style/Button.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipes_for_pregnant_woman" />

        <Button
            android:id="@+id/recipes_for_children"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_box"
            android:drawableLeft="@drawable/mum_with_kid"
            android:text="@string/recipe_for_children"
            android:textColor="@color/Orange"
            android:textSize="20sp"
            android:textAlignment="center"
            android:theme="@style/Button.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipes_for_mothers" />


