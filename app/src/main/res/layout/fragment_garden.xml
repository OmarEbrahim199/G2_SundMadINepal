    <Button
        android:id="@+id/soil"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_box"
        android:drawableLeft="@drawable/soil_icon"
        android:text="@string/preparing_the_soil"
        android:textAlignment="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:theme="@style/Button.White"
        app:layout_constraintBottom_toTopOf="@+id/compost"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/compost"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_box"
        android:drawableLeft="@drawable/compost_icon"
        android:text="@string/how_to_make_compost"
        android:textAlignment="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:theme="@style/Button.White"
        app:layout_constraintBottom_toTopOf="@+id/water"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soil" />

    <Button
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_box"
        android:drawableLeft="@drawable/watering_can_icon"
        android:text="@string/how_to_water_crops"
        android:textAlignment="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:theme="@style/Button.White"
        app:layout_constraintBottom_toTopOf="@+id/grow"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compost" />

    <Button
        android:id="@+id/grow"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_box"
        android:drawableLeft="@drawable/vegetables_icon"
        android:text="@string/what_to_grow_in_the_garden"
        android:textAlignment="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:theme="@style/Button.White"
        app:layout_constraintBottom_toTopOf="@+id/text_garden"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water"
        app:layout_constraintVertical_bias="0.0" />

    <!--android:drawableLeft="@drawable/pregnant_woman"-->

</androidx.constraintlayout.widget.ConstraintLayout>

